{
  "name": "node-project-template",
  "version": "1.0.0",
  "private": false,
  "description": "Express/React node app project template",
  "main": "client/index.js",
  "scripts": {
    "preinstall": "npm list pm2 -g || npm install pm2 -g",
    "postinstall": "npm run clean",
    "test": "npm run lint && mocha",
    "start": "NODE_ENV=production npm run build && pm2 start ./bin/www",
    "start:nodemon": "nodemon ./bin/www",
    "start:dev": "NODE_ENV=development npm run build:dev && run-p start:nodemon watch:* browsersync",
    "build": "run-s js css copy modernizr",
    "build:dev": "run-s js:dev css copy modernizr",
    "clean": "rm -rf public && mkdir -p public/js public/css public/img",
    "browsersync": "browser-sync start --config bs-config.js",
    "css": "postcss -o 'public/css/styles.css' 'client/index.css'",
    "js:dev": "NODE_ENV=development browserify client/index.js -o public/js/bundle.js -t babelify",
    "js": "browserify client/index.js -t babelify | uglifyjs -m -c warnings=false > public/js/bundle.js",
    "copy": "node scripts/copy.js 'client/*.{txt,png}' -o public",
    "modernizr": "modernizr -c modernizr-config.json -d public/js",
    "watch:js": "onchange 'client/**/*.js' -- npm run js:dev",
    "watch:css": "onchange 'client/**/*.css' -- npm run css",
    "watch:test": "mocha --watch",
    "lint:css": "stylelint 'client/**/*.css'; exit 0",
    "lint:js": "eslint 'client/**/*.js' 'server/**/*.js'; exit 0",
    "lint": "run-s lint:*",
    "audio": "node scripts/audio.js 'client/components' -o 'public/audio'",
    "img:convert": "node scripts/img-convert.js 'client/img/**/*{.png,.jpg}' -o 'public/img' -t jpg webp -q 80 -s 1536 1280 1024 768 640",
    "img:tinify": "node scripts/tinify.js 'client/img' -o 'public/img'",
    "texturepack": "node scripts/texture-pack.js 'src/textures/*' -o 'dist/textures' -t -v 1: 0.5:@0.5x",
    "__comment": "use these if vendor.js is required, replacing 'three' example with modules in vendor",
    "__js:vendor": "browserify -r three | uglifyjs -m -c warnings=false > public/js/vendor.js",
    "__js": "browserify -x three client/index.js -t babelify | uglifyjs -m -c warnings=false > public/js/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "ianmcgregor",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "~1.16.0",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.4.1",
    "debug": "~2.6.0",
    "dotenv": "^4.0.0",
    "ejs": "~2.5.5",
    "express": "~4.14.1",
    "morgan": "~1.7.0",
    "normalize.css": "^6.0.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-micro-router": "^1.1.0",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "serve-favicon": "~2.3.2",
    "suitcss-base": "^2.0.0",
    "usfl": "^2.2.8",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "async": "^2.3.0",
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.3.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "fluent-ffmpeg": "^2.1.0",
    "glob": "^7.1.1",
    "imagemin": "^5.2.2",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "modernizr": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^3.2.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-easings": "^0.3.0",
    "postcss-import": "^9.1.0",
    "postcss-nested": "^1.0.1",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^6.0.4",
    "sharp": "^0.17.3",
    "snake-case": "^2.1.0",
    "stylelint": "^7.10.1",
    "svgo": "^0.7.2",
    "tinify": "^1.5.0",
    "watchify": "^3.9.0",
    "yargs": "^7.1.0"
  }
}
